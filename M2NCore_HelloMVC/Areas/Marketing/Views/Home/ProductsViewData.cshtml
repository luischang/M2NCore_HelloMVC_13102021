@using M2NCore_HelloMVC.Areas.Marketing.Models;
@{
    var products = ViewData["ProductList"] as List<Product>;
}


<h1>Products with ViewData: @ViewData["Address"]</h1>

<table class="table table-dark">
    <thead>
        <tr>
            <th>ID</th>
            <th>Description</th>
            <th>Title</th>
            <th>Maker</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in products)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Description</td>
                <td>
                    <a href="@item.Url">@item.Title</a>
                </td>
                <td>
                    @item.Maker
                </td>
                <td>
                    <img src="@item.Img" style="height:40px;width:40px;" />
                </td>
            </tr>
        }
    </tbody>
</table>
